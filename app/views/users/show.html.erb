<div class="booyah-box">
	<div class="row">
		<div class="col-4">
			<%= image_tag 'user.png' %>
		</div>

		<div class="col-8">
			<h1><%= current_user.email %></h1>
			<h3>Member Since: <%= current_user.created_at.strftime("%B %d, %Y") %></h3>
			<br />
			<h4><%= current_user.comments.count %> total comments</h4>
			<h4><%= current_user.comments.where(rating: '5_stars').count %> five-star review(s) in total</h4>
		</div>
	</div>
	<div class="clear"></div>
</div>